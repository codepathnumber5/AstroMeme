<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/friend_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/f_list_sign"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:contentDescription="@string/zodiac_sign"
        android:src="@drawable/aries" />

    <TextView
        android:id="@+id/f_list_name"
        android:layout_width="280dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/f_list_sign"
        tools:text="Anastasia Kali" />

    <Button
        android:id="@+id/f_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/f_list_name"
        android:layout_alignParentEnd="true"
        tools:text="X" />

</RelativeLayout>