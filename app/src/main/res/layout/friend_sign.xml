<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:layout_marginStart="0dp"
    android:layout_marginLeft="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginBottom="0dp">

    <LinearLayout
        android:id="@+id/top_btn_fdSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/home_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="1dp"
            android:layout_marginRight="1dp"
            android:text="Home"
            />

        <Button
            android:id="@+id/hamburger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_weight="0.5"
            android:text="===" />

    </LinearLayout>

    <TextView
        android:id="@+id/got_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ana"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@+id/top_btn_fdSign"/>

    <TextView
        android:id="@+id/got_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gemini"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@+id/got_name"/>

    <ImageView
        android:id="@+id/got_sign_pic"
        android:layout_width="wrap_content"
        android:layout_height="285dp"
        android:layout_below="@id/got_sign"
        android:layout_marginHorizontal="@android:dimen/notification_large_icon_width"
        android:foregroundGravity="center"
        android:src="@drawable/gemini"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/get_meme_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/got_sign_pic"
        android:text="Get Meme"
        android:layout_marginTop="100dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        tools:ignore="UnknownId" />
</RelativeLayout>