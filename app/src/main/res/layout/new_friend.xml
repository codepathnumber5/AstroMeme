<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="40dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="150dp">

    <TextView
        android:id="@+id/head_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Friend" />

    <TextView
        android:id="@+id/new_friend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/head_title"
        android:text="Name" />

    <EditText
        android:id="@+id/new_name_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter frined's name"
        android:layout_below="@+id/new_friend_name"
        android:layout_margin="10dp" />

    <!-- Trying to make a month/date picker -->
    <LinearLayout
        android:id="@+id/date_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/new_name_field">

        <TextView
            android:id="@+id/month"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Month" />

        <TextView
            android:id="@+id/day"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Day" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/numsber_picker"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:layout_below="@id/date_pick"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >

        <NumberPicker
            android:id="@+id/picker_month"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />

        <NumberPicker
            android:id="@+id/picker_day"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp" />
    </LinearLayout>

<!-- Side be side buttons will go here -->

    <LinearLayout
        android:id="@+id/new_friend_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/cancel_new_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="0.5"
            android:text="Cancel"
            tools:text="Cancel"/>

        <Button
            android:id="@+id/get_new_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Get Sign"
            tools:text="Get Sign"/>

    </LinearLayout>

</RelativeLayout>